<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collect_img"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/laoxianghui"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/collect_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="还是很多电影"
                android:layout_weight="1"
                android:textColor="#111111"
                />

            <TextView
                android:id="@+id/collect_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28￥"
                android:textColor="#ff9438"
                android:layout_weight="1"
                />



            <TextView
                android:id="@+id/collect_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="还是很多电影"

                />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
           >


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_release_item_time"
            android:layout_marginBottom="1dp"
            />

        <TextView
            android:id="@+id/collect_opentime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"

                />
            <TextView
                android:id="@+id/collect_clostime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:30"

                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/img_release_item_share"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分享"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="#222222"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/img_release_item_delete"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="删除"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#222222"
                />
        </LinearLayout>


</LinearLayout>

</LinearLayout>