<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
              android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:clickable="true"
        android:onClick="signin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#52C679"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_signinHeadportrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="#33ffffff"
            android:src="@drawable/anim_1"/>
        <TextView
            android:id="@+id/tv_click_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
           android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/img_signinHeadportrait"
            android:gravity="center"
            android:text="点击登录"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/img_my_fragment_login_right"/>
    </RelativeLayout>
</LinearLayout>