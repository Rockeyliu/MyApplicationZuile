<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 跳蚤图标内的布局   命名规则:控件类型_工作_控件内容 -->

    <ImageView
        android:id="@+id/img_tiaozao_camera"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/photo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#eee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tiaozao_businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家名称："
            android:layout_margin="5dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_tiaozao_importBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <!-- 线的写法  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tiaozao_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价："
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_tiaozao_importPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请填写售价    元"
            />

    </LinearLayout>
    <!-- 线的写法  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tiaozao_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计量单位："
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_tiaozao_importCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请填写计量单位（列如人、小时等）"
            />

    </LinearLayout>

    <!-- 线的写法  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tiaozao_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_tiaozao_importAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请填写地址"
            />

    </LinearLayout>

    <!-- 线的写法  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tiaozao_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人："
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_tiaozao_importContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请填写联系人"

            />

    </LinearLayout>

    <!-- 线的写法  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tiaozao_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话："
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_tiaozao_importPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请写正确的联系方式（外地带“区号”）"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eee"/>

    <EditText
        android:id="@+id/et_tiaozao_details"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:hint="填写详情"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eee"/>



</LinearLayout>